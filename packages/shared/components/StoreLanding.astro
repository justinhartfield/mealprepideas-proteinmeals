---
/**
 * StoreLanding.astro — T6 Store Landing page template
 * Converted from: store_landing__t6_.html (Trader Joe's example)
 */
import BaseLayout from '../layouts/BaseLayout.astro';

export interface ProductItem {
  id: number;
  name: string;
  category: string;
  protein: string;
  price: string;
  ppe: string;
  tag: string;
}

export interface Props {
  title: string;
  description?: string;
  canonicalUrl?: string;
  storeName: string;
  storeSlug: string;
  headline: string;
  headlineAccent: string;
  subheadline: string;
  metricPriority?: string;
  accentColor?: string;
  products?: ProductItem[];
}

const {
  title,
  description,
  canonicalUrl,
  storeName,
  storeSlug,
  headline,
  headlineAccent,
  subheadline,
  metricPriority = 'Price-per-Protein',
  accentColor = 'red',
  products = [],
} = Astro.props;
---

<BaseLayout title={title} description={description} canonicalUrl={canonicalUrl}>
    <!-- Navigation -->
    <nav class="sticky top-0 z-40 w-full border-b border-black/5 bg-white/80 backdrop-blur-md px-6 py-4">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
            <a href="/" class="flex items-center gap-4">
                <div class="w-10 h-10 bg-slate-900 flex items-center justify-center rounded-lg text-white font-bold text-xl hover:scale-105 transition-transform">M</div>
                <span class="font-extrabold tracking-tighter text-2xl uppercase">Systemic Meals</span>
            </a>
            <div class="hidden md:flex gap-8 text-sm font-medium opacity-60">
                <a href="/high-protein/store/">Retail Audits</a>
                <a href="/high-protein/">High Protein Hub</a>
            </div>
        </div>
    </nav>

    <main class="flex-grow" x-data={`{
        cart: [],
        activeCategory: 'All',
        searchQuery: '',
        products: ${JSON.stringify(products)},
        toggleProduct(id) {
            if (this.cart.includes(id)) {
                this.cart = this.cart.filter(i => i !== id);
            } else {
                this.cart.push(id);
            }
        }
    }`}>
        <!-- Store Hero -->
        <header class="relative bg-white border-b border-black/5 pt-20 pb-12 px-6 overflow-hidden">
            <div class="max-w-7xl mx-auto flex flex-col md:flex-row gap-12 items-end">
                <div class="flex-grow">
                    <nav class="flex gap-2 mb-6">
                        <span class="label-text">Retail Audit</span>
                        <span class={`label-text !border-l-[var(--pantry-accent)]`}>{storeName}</span>
                    </nav>
                    <h1 class="text-6xl md:text-8xl font-black tracking-tighter leading-[0.85] mb-6">
                        {headline} <br><span class={`text-${accentColor}-600`}>{headlineAccent}</span>
                    </h1>
                    <p class="max-w-2xl text-xl opacity-60 font-medium">{subheadline}</p>
                </div>
                <div class="w-full md:w-80">
                    <div class="pantry-card rounded-2xl p-6 bg-slate-900 text-white border-none">
                        <div class="text-[10px] font-black uppercase tracking-widest opacity-50 mb-2">Metric Priority</div>
                        <div class="text-2xl font-black mb-1">{metricPriority}</div>
                        <p class="text-xs opacity-60">Grams of protein per dollar spent.</p>
                    </div>
                </div>
            </div>
        </header>

        <!-- Filter Bar -->
        <section class="sticky top-[73px] z-30 bg-[var(--pantry-cream)]/90 backdrop-blur-md border-b border-black/5 py-4 px-6">
            <div class="max-w-7xl mx-auto flex flex-wrap items-center justify-between gap-4">
                <div class="flex gap-2">
                    <template x-for="cat in ['All', 'Fridge', 'Freezer', 'Pantry']">
                        <button @click="activeCategory = cat" x-bind:class="activeCategory === cat ? 'bg-slate-900 text-white' : 'bg-white text-slate-900 hover:bg-slate-100'" class="px-5 py-2 rounded-full text-xs font-bold transition-all border border-black/5" x-text="cat"></button>
                    </template>
                </div>
                <input type="text" x-model="searchQuery" placeholder="Search SKU database..." class="bg-white border border-black/10 rounded-full px-10 py-2 text-xs font-medium focus:outline-none focus:ring-2 focus:ring-slate-500/20 w-full md:w-64" />
            </div>
        </section>

        <!-- Product List -->
        <section class="max-w-7xl mx-auto py-12 px-6">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
                <div class="lg:col-span-2 space-y-8">
                    <div class="flex justify-between items-end border-b-2 border-slate-900 pb-4">
                        <h3 class="text-2xl font-black">Audit Results</h3>
                        <span class="text-[10px] font-bold opacity-40 uppercase tracking-widest" x-text="`${products.filter(p => (activeCategory === 'All' || p.category === activeCategory) && p.name.toLowerCase().includes(searchQuery.toLowerCase())).length} SKUs Identified`"></span>
                    </div>

                    <div class="space-y-3">
                        <template x-for="product in products.filter(p => (activeCategory === 'All' || p.category === activeCategory) && p.name.toLowerCase().includes(searchQuery.toLowerCase()))" x-bind:key="product.id">
                            <div class="group flex items-center justify-between pantry-card p-4 rounded-xl">
                                <div class="flex items-center gap-6">
                                    <input type="checkbox" x-bind:checked="cart.includes(product.id)" @change="toggleProduct(product.id)" class="w-5 h-5 rounded border-2 border-slate-900 accent-slate-900" />
                                    <div>
                                        <div class="flex items-center gap-2 mb-1">
                                            <span class="font-bold text-lg" x-text="product.name"></span>
                                            <span class="text-[10px] font-black px-2 py-0.5 bg-slate-100 rounded text-slate-500 uppercase" x-text="product.tag"></span>
                                        </div>
                                        <div class="flex gap-4 text-[10px] font-bold opacity-40 uppercase tracking-widest">
                                            <span x-text="product.category"></span>
                                            <span class={`text-${accentColor}-600`} x-text="`${product.protein} Protein`"></span>
                                            <span x-text="product.price"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <div class="text-[10px] font-black uppercase opacity-30 mb-1">P:E Ratio</div>
                                    <div class="font-black text-xs" x-text="product.ppe"></div>
                                </div>
                            </div>
                        </template>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="space-y-8">
                    <div class="pantry-card rounded-3xl p-8 bg-slate-900 text-white sticky top-[160px]">
                        <span class="label-text !bg-white/10 !text-white !border-orange-500 mb-6">System Pairings</span>
                        <h4 class="text-2xl font-black mb-4">"Buy These, <br>Cook These"</h4>
                        <p class="text-xs opacity-50 mt-4">Curated high-protein combinations from this store's inventory.</p>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="bg-slate-900 text-white py-16 px-6 mt-24">
        <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center gap-8">
            <div class="flex items-center gap-3">
                <div class="w-8 h-8 bg-white text-slate-900 flex items-center justify-center rounded-md font-black">M</div>
                <span class="font-black text-xl tracking-tighter uppercase">The System Network</span>
            </div>
            <p class="text-[10px] font-bold text-slate-500 tracking-widest uppercase">© 2024 Systemic Meals Network. All SKU data human-verified.</p>
        </div>
    </footer>
</BaseLayout>
