---
/**
 * ToolsIndex — Tools & Calculators Landing Page
 * Grid of tool cards with Schema.org CollectionPage/ItemList
 * Theme-aware: uses CSS custom properties
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import HeaderNav from '../HeaderNav.astro';
import FooterNav from '../FooterNav.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

interface Props {
  site?: 'mealprepideas' | 'proteinmeals';
}

const { site = 'mealprepideas' } = Astro.props;

const tools = [
  {
    title: "What's In My Fridge?",
    slug: 'fridge-finder',
    href: '/tools/fridge-finder/',
    description: 'Find recipes from ingredients you already have. No more wasted food, no more boring meals.',
    icon: 'fridge',
  },
  {
    title: 'Meal Planner',
    slug: 'meal-planner',
    href: '/tools/meal-planner/',
    description: 'Weekly meal plan builder with drag-and-drop. Plan your entire week in under 5 minutes.',
    icon: 'calendar',
  },
  {
    title: 'Grocery List',
    slug: 'grocery-list',
    href: '/tools/grocery-list/',
    description: 'Smart grocery list generator from recipes. Auto-combines ingredients and sorts by aisle.',
    icon: 'cart',
  },
  {
    title: 'ROI Calculator',
    slug: 'roi-calculator',
    href: '/tools/roi-calculator/',
    description: 'See how much meal prepping saves you. Compare meal prep costs vs. takeout and dining out.',
    icon: 'calculator',
  },
  {
    title: 'Protein Cost Ranker',
    slug: 'protein-cost',
    href: '/tools/protein-cost/',
    description: 'Compare protein sources by cost efficiency. Find the cheapest grams of protein per dollar.',
    icon: 'rank',
  },
  {
    title: 'Nutrition Label',
    slug: 'nutrition-label',
    href: '/tools/nutrition-label/',
    description: 'Generate FDA-style nutrition labels for any recipe. Perfect for meal prep businesses.',
    icon: 'label',
  },
  {
    title: 'Prep Quiz',
    slug: 'prep-quiz',
    href: '/tools/prep-quiz/',
    description: 'Find your perfect meal prep style. Answer 7 questions, get a personalized prep blueprint.',
    icon: 'quiz',
  },
  {
    title: 'Allergen Filter',
    slug: 'allergen-filter',
    href: '/tools/allergen-filter/',
    description: 'Filter recipes by dietary restrictions. Supports 14 major allergens and lifestyle diets.',
    icon: 'filter',
  },
  {
    title: 'Freezer Tracker',
    slug: 'freezer-tracker',
    href: '/tools/freezer-tracker/',
    description: 'Track your freezer inventory and expiry dates. Never throw out forgotten frozen meals again.',
    icon: 'snowflake',
  },
  {
    title: 'Prep Streak',
    slug: 'streak',
    href: '/tools/streak/',
    description: 'Gamified meal prep streak tracker. Build consistency with streaks, badges, and weekly goals.',
    icon: 'flame',
  },
];

const pageTitle = site === 'proteinmeals'
  ? 'Tools & Calculators | ProteinMeals.co'
  : 'Tools & Calculators | MealPrepIdeas.co';
const pageDescription = 'Free meal prep tools: fridge finder, meal planner, grocery list generator, ROI calculator, protein cost ranker, nutrition label maker, and more.';

const siteUrl = site === 'proteinmeals' ? 'https://proteinmeals.co' : 'https://mealprepideas.co';

const structuredData = JSON.stringify({
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  name: 'Tools & Calculators',
  description: pageDescription,
  url: `${siteUrl}/tools/`,
  mainEntity: {
    '@type': 'ItemList',
    numberOfItems: tools.length,
    itemListElement: tools.map((tool, i) => ({
      '@type': 'ListItem',
      position: i + 1,
      name: tool.title,
      description: tool.description,
      url: `${siteUrl}${tool.href}`,
    })),
  },
});

// i18n
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout title={pageTitle} description={pageDescription} canonicalUrl="/tools/" structuredData={structuredData}>
  <HeaderNav site={site} />

  <main class="flex-grow">
    <!-- HERO -->
    <section class="tools-hero px-6 max-w-7xl mx-auto pt-20 pb-16">
      <div class="flex items-center gap-4 mb-6">
        <div class="h-[2px] w-16" style="background-color: var(--accent-primary);"></div>
        <span class="text-[10px] font-black uppercase tracking-[0.5em]" style="color: var(--accent-primary);">Free Tools</span>
      </div>
      <h1 class="text-5xl md:text-7xl font-black tracking-tighter leading-[0.9] mb-6" style="color: var(--text-primary);">
        TOOLS &<br/>CALCULATORS
      </h1>
      <p class="text-lg font-medium max-w-xl" style="color: var(--text-secondary);">
        Free interactive tools to optimize your meal prep workflow, track macros, and save money.
      </p>
      <div class="flex items-center gap-6 mt-8">
        <div class="flex items-center gap-2">
          <span class="text-3xl font-black tracking-tighter" style="color: var(--text-primary);">{tools.length}</span>
          <span class="text-[10px] font-bold uppercase tracking-widest" style="color: var(--text-tertiary);">Tools Available</span>
        </div>
        <div class="h-8 w-px" style="background: var(--border-default);"></div>
        <div class="flex items-center gap-2">
          <div class="w-2 h-2 rounded-full animate-pulse" style="background-color: var(--accent-primary);"></div>
          <span class="text-[10px] font-bold uppercase tracking-widest" style="color: var(--text-tertiary);">100% Free</span>
        </div>
      </div>
    </section>

    <!-- TOOLS GRID -->
    <section class="tools-grid-section px-6 max-w-7xl mx-auto pb-24">
      <div class="tools-grid">
        {tools.map((tool, i) => (
          <a href={tool.href} class="tool-card group">
            <div class="tool-card__header">
              <div class="tool-card__icon-wrap">
                {tool.icon === 'fridge' && (
                  <svg class="tool-card__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <rect x="4" y="2" width="16" height="20" rx="2" />
                    <line x1="4" y1="10" x2="20" y2="10" />
                    <line x1="9" y1="6" x2="9" y2="8" />
                    <line x1="9" y1="14" x2="9" y2="17" />
                  </svg>
                )}
                {tool.icon === 'calendar' && (
                  <svg class="tool-card__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <rect x="3" y="4" width="18" height="18" rx="2" />
                    <line x1="16" y1="2" x2="16" y2="6" />
                    <line x1="8" y1="2" x2="8" y2="6" />
                    <line x1="3" y1="10" x2="21" y2="10" />
                    <rect x="7" y="14" width="3" height="3" rx="0.5" />
                  </svg>
                )}
                {tool.icon === 'cart' && (
                  <svg class="tool-card__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17" />
                    <circle cx="9" cy="20" r="1.5" />
                    <circle cx="17" cy="20" r="1.5" />
                  </svg>
                )}
                {tool.icon === 'calculator' && (
                  <svg class="tool-card__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <rect x="4" y="2" width="16" height="20" rx="2" />
                    <rect x="7" y="5" width="10" height="4" rx="1" />
                    <circle cx="8.5" cy="13" r="0.8" fill="currentColor" />
                    <circle cx="12" cy="13" r="0.8" fill="currentColor" />
                    <circle cx="15.5" cy="13" r="0.8" fill="currentColor" />
                    <circle cx="8.5" cy="17" r="0.8" fill="currentColor" />
                    <circle cx="12" cy="17" r="0.8" fill="currentColor" />
                    <rect x="14.5" y="15.5" width="2" height="3" rx="0.5" fill="currentColor" />
                  </svg>
                )}
                {tool.icon === 'rank' && (
                  <svg class="tool-card__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <rect x="3" y="14" width="5" height="8" rx="1" />
                    <rect x="9.5" y="8" width="5" height="14" rx="1" />
                    <rect x="16" y="3" width="5" height="19" rx="1" />
                    <path d="M18.5 6l-1-2h3l-1 2" stroke-width="1" />
                  </svg>
                )}
                {tool.icon === 'label' && (
                  <svg class="tool-card__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <rect x="5" y="2" width="14" height="20" rx="2" />
                    <line x1="8" y1="6" x2="16" y2="6" />
                    <line x1="8" y1="9" x2="14" y2="9" />
                    <line x1="5" y1="12" x2="19" y2="12" stroke-width="2" />
                    <line x1="8" y1="15" x2="12" y2="15" />
                    <line x1="8" y1="18" x2="16" y2="18" />
                  </svg>
                )}
                {tool.icon === 'quiz' && (
                  <svg class="tool-card__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <circle cx="12" cy="12" r="10" />
                    <path d="M9 9a3 3 0 115.12 2.13c-.58.49-1.12 1.08-1.12 1.87v.5" />
                    <circle cx="12" cy="17" r="0.8" fill="currentColor" />
                  </svg>
                )}
                {tool.icon === 'filter' && (
                  <svg class="tool-card__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M3 4h18l-7 8.5V18l-4 2v-7.5L3 4z" />
                  </svg>
                )}
                {tool.icon === 'snowflake' && (
                  <svg class="tool-card__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <line x1="12" y1="2" x2="12" y2="22" />
                    <line x1="2" y1="12" x2="22" y2="12" />
                    <line x1="4.93" y1="4.93" x2="19.07" y2="19.07" />
                    <line x1="19.07" y1="4.93" x2="4.93" y2="19.07" />
                    <line x1="12" y1="2" x2="14" y2="5" />
                    <line x1="12" y1="2" x2="10" y2="5" />
                    <line x1="12" y1="22" x2="14" y2="19" />
                    <line x1="12" y1="22" x2="10" y2="19" />
                  </svg>
                )}
                {tool.icon === 'flame' && (
                  <svg class="tool-card__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M12 22c4.97 0 7-3.58 7-7 0-4-3-7.5-7-12-4 4.5-7 8-7 12 0 3.42 2.03 7 7 7z" />
                    <path d="M12 22c2 0 3-1.5 3-3.5 0-2-1.5-3.5-3-6-1.5 2.5-3 4-3 6 0 2 1 3.5 3 3.5z" />
                  </svg>
                )}
              </div>
              <span class="tool-card__number">{String(i + 1).padStart(2, '0')}</span>
            </div>
            <h3 class="tool-card__title">{tool.title}</h3>
            <p class="tool-card__desc">{tool.description}</p>
            <div class="tool-card__cta">
              <span class="tool-card__cta-text">Launch Tool</span>
              <svg class="tool-card__cta-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </div>
          </a>
        ))}
      </div>
    </section>
  </main>

  <FooterNav site={site} />
</BaseLayout>

<style>
  /* ═══════════════════════════════════════════════════════
     TOOLS INDEX PAGE STYLES
     ═══════════════════════════════════════════════════════ */

  .tools-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .tools-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .tools-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .tool-card {
    display: flex;
    flex-direction: column;
    padding: 2rem;
    border-radius: 1.5rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border-default);
    text-decoration: none;
    color: var(--text-primary);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .tool-card::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 1.5rem;
    opacity: 0;
    transition: opacity 0.3s;
    background: linear-gradient(135deg, color-mix(in srgb, var(--accent-primary) 5%, transparent), transparent);
  }

  .tool-card:hover {
    border-color: var(--accent-primary);
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
  }

  .tool-card:hover::before {
    opacity: 1;
  }

  .tool-card__header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-bottom: 1.5rem;
    position: relative;
    z-index: 1;
  }

  .tool-card__icon-wrap {
    width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.75rem;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-default);
    transition: all 0.3s;
  }

  .tool-card:hover .tool-card__icon-wrap {
    background: var(--accent-primary);
    border-color: var(--accent-primary);
  }

  .tool-card__icon {
    width: 1.5rem;
    height: 1.5rem;
    color: var(--text-secondary);
    transition: color 0.3s;
  }

  .tool-card:hover .tool-card__icon {
    color: var(--text-inverse);
  }

  .tool-card__number {
    font-size: 0.65rem;
    font-weight: 900;
    letter-spacing: 0.1em;
    color: var(--text-tertiary);
    opacity: 0.5;
  }

  .tool-card__title {
    font-size: 1.25rem;
    font-weight: 900;
    letter-spacing: -0.02em;
    margin-bottom: 0.75rem;
    position: relative;
    z-index: 1;
  }

  .tool-card__desc {
    font-size: 0.85rem;
    line-height: 1.6;
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    flex: 1;
    position: relative;
    z-index: 1;
  }

  .tool-card__cta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    position: relative;
    z-index: 1;
  }

  .tool-card__cta-text {
    font-size: 0.7rem;
    font-weight: 900;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--accent-primary);
    transition: letter-spacing 0.3s;
  }

  .tool-card:hover .tool-card__cta-text {
    letter-spacing: 0.15em;
  }

  .tool-card__cta-arrow {
    width: 1rem;
    height: 1rem;
    color: var(--accent-primary);
    transition: transform 0.3s;
  }

  .tool-card:hover .tool-card__cta-arrow {
    transform: translateX(4px);
  }
</style>
