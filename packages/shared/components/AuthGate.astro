---
/**
 * AuthGate â€” Wraps content behind Clerk authentication
 * Shows a compelling sign-up prompt when not signed in.
 * When signed in, shows the slotted content.
 * 
 * Usage:
 *   <AuthGate toolName="Meal Planner" toolDescription="Plan your week...">
 *     <ActualToolContent />
 *   </AuthGate>
 */
interface Props {
  toolName: string;
  toolDescription?: string;
  toolIcon?: string;
}

const {
  toolName,
  toolDescription = 'Sign in to access this free tool.',
  toolIcon = 'ðŸ”§',
} = Astro.props;
---

<div x-data="{ authReady: false, signedIn: false }" x-init="
  function checkAuth() {
    if (window.Clerk && window.Clerk.user) {
      signedIn = true;
      authReady = true;
    } else if (window.__authReady) {
      signedIn = !!window.Clerk?.user;
      authReady = true;
    }
  }
  checkAuth();
  window.addEventListener('clerk-ready', () => { checkAuth(); });
  // Fallback timeout â€” if Clerk takes too long, show gate
  setTimeout(() => { if (!authReady) authReady = true; }, 3000);
">
  <!-- Loading state -->
  <div x-show="!authReady" x-cloak class="flex items-center justify-center py-32">
    <div class="text-center">
      <div class="inline-block w-8 h-8 border-2 border-t-transparent rounded-full animate-spin mb-4" style="border-color: var(--accent-primary); border-top-color: transparent;"></div>
      <p class="text-sm font-medium" style="color: var(--text-secondary);">Loading...</p>
    </div>
  </div>

  <!-- Auth Gate â€” Not signed in -->
  <div x-show="authReady && !signedIn" x-cloak class="flex items-center justify-center py-20 px-6">
    <div class="max-w-lg w-full text-center">
      <!-- Icon -->
      <div class="text-6xl mb-6">{toolIcon}</div>
      
      <!-- Tool name -->
      <h2 class="text-3xl md:text-4xl font-black tracking-tight mb-3">{toolName}</h2>
      
      <!-- Description -->
      <p class="text-base mb-8 leading-relaxed" style="color: var(--text-secondary);">{toolDescription}</p>
      
      <!-- Benefits -->
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-10">
        <div class="rounded-2xl p-4" style="background: var(--bg-tertiary);">
          <div class="text-2xl mb-2">âš¡</div>
          <p class="text-xs font-bold uppercase tracking-wider" style="color: var(--text-secondary);">100% Free</p>
        </div>
        <div class="rounded-2xl p-4" style="background: var(--bg-tertiary);">
          <div class="text-2xl mb-2">ðŸ’¾</div>
          <p class="text-xs font-bold uppercase tracking-wider" style="color: var(--text-secondary);">Save Progress</p>
        </div>
        <div class="rounded-2xl p-4" style="background: var(--bg-tertiary);">
          <div class="text-2xl mb-2">ðŸ”’</div>
          <p class="text-xs font-bold uppercase tracking-wider" style="color: var(--text-secondary);">No Spam</p>
        </div>
      </div>
      
      <!-- Sign in button -->
      <button
        @click="window.authHelper?.openSignIn()"
        class="inline-flex items-center gap-3 px-8 py-4 rounded-2xl font-bold text-lg transition-all duration-300 hover:scale-105 hover:shadow-lg cursor-pointer"
        style="background: var(--accent-primary); color: var(--text-inverse);"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
        Sign Up Free to Use {toolName}
      </button>
      
      <p class="text-xs mt-4" style="color: var(--text-tertiary);">
        Takes 10 seconds Â· Google or email Â· No credit card
      </p>
    </div>
  </div>

  <!-- Authenticated â€” show the tool -->
  <div x-show="authReady && signedIn" x-cloak>
    <slot />
  </div>
</div>
