---
/**
 * HubLanding.astro — T1 Hub Landing page template
 * Converted from: meal_prep_hub__t1_.html + high_protein_hub__t1_.html
 *
 * A unified component that renders either the meal-prep or high-protein hub
 * based on the `hub` prop.
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import { facets, type HubId } from '../data/taxonomy';

export interface Props {
  hub: HubId;
  title: string;
  description?: string;
  canonicalUrl?: string;
}

const { hub, title, description, canonicalUrl } = Astro.props;
const isMealPrep = hub === 'meal-prep';
const accentColor = isMealPrep ? 'emerald' : 'orange';
const hubPath = isMealPrep ? '/meal-prep' : '/high-protein';
const siteName = isMealPrep ? 'MealPrepIdeas.co' : 'ProteinMeals.co';
---

<BaseLayout title={title} description={description} canonicalUrl={canonicalUrl} bodyClass={isMealPrep ? 'bg-mesh' : ''}>
    <!-- T1 Navigation -->
    <nav class="sticky top-0 z-50 w-full border-b border-black/5 bg-white/70 backdrop-blur-xl px-6 py-4">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
            <a href="/" class="flex items-center gap-3 group">
                <div class={`w-10 h-10 bg-${accentColor}-700 flex items-center justify-center rounded-xl text-white font-bold text-xl transition-transform group-hover:rotate-12`}>
                    {isMealPrep ? 'M' : 'P'}
                </div>
                <div>
                    <span class="font-black tracking-tighter text-xl block leading-none">
                        {isMealPrep ? (
                            <>MealPrepIdeas<span class="text-emerald-600">.co</span></>
                        ) : (
                            <>Protein<span class="text-orange-600">Meals.co</span></>
                        )}
                    </span>
                    <span class="text-[10px] font-bold opacity-40 uppercase tracking-widest">
                        {isMealPrep ? 'The Logistics Hub' : 'The Macro Authority'}
                    </span>
                </div>
            </a>
            <div class="hidden lg:flex gap-10 items-center">
                <div class="flex gap-6 text-[11px] font-black uppercase tracking-widest opacity-60">
                    {isMealPrep ? (
                        <>
                            <a href="#facets" class="hover:text-emerald-700 transition-colors">By Method</a>
                            <a href="#facets" class="hover:text-emerald-700 transition-colors">By Persona</a>
                            <a href="#plans" class="hover:text-emerald-700 transition-colors">Weekly Plans</a>
                        </>
                    ) : (
                        <>
                            <a href="/meal-prep/" class="hover:text-orange-700 transition-colors">Meal Prep Hub</a>
                            <a href="#" class="hover:text-orange-700 transition-colors">Macro Database</a>
                            <a href="#" class="hover:text-orange-700 transition-colors">The P:E Ratio</a>
                        </>
                    )}
                </div>
                <button class={`bg-slate-900 text-white text-[10px] font-bold px-6 py-2.5 rounded-full hover:bg-${accentColor}-700 transition-all shadow-lg`}>
                    {isMealPrep ? 'ACCESS SYSTEMS' : 'Macro Calculator'}
                </button>
            </div>
        </div>
    </nav>

    <main class="flex-grow" x-data={isMealPrep ?
        "{ step: 0, filterGoal: '', filterMethod: '', activeTab: 'method' }" :
        "{ activeFacet: 'diet', currentStep: 0, userGoal: '', userConstraint: '' }"
    }>
        <!-- Hero Section -->
        <section class="relative pt-20 pb-12 px-6 overflow-hidden">
            <div class="max-w-7xl mx-auto grid lg:grid-cols-12 gap-12 items-center">
                <div class="lg:col-span-7">
                    <span class="label-text mb-6">{isMealPrep ? 'Canonical Pillar: Logistics' : 'Pillar 02: Authority Hub'}</span>
                    {isMealPrep ? (
                        <h1 class="text-6xl md:text-8xl font-black tracking-tighter leading-[0.85] mb-8 text-slate-900">
                            Master the <br><span class="text-emerald-700 italic">Sunday Batch.</span>
                        </h1>
                    ) : (
                        <h1 class="text-6xl md:text-8xl font-black leading-[0.85] tracking-tighter mb-8">
                            HIGH <br><span class="text-orange-600 italic">PROTEIN</span> <br>SYSTEMS.
                        </h1>
                    )}
                    <p class="text-xl text-slate-600 max-w-xl leading-relaxed mb-10">
                        {isMealPrep
                            ? "Stop \"deciding\" what to eat. Build a friction-free week with data-backed storage protocols, efficient batching workflows, and logistics designed for the modern schedule."
                            : "The definitive index for macro-intent. We map nutrient density across retail, fast food, and batch-cooking protocols. Fueling the machine with logic, not guesswork."
                        }
                    </p>
                    {isMealPrep ? (
                        <div class="flex flex-wrap gap-4">
                            <a href="#system-finder" class="bg-slate-900 text-white px-8 py-4 rounded-2xl font-bold flex items-center gap-3 hover:bg-emerald-800 transition-all group">
                                START PLANNING
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
                            </a>
                            <div class="flex items-center gap-4 px-6 py-4 rounded-2xl bg-white border border-black/5">
                                <div class="flex -space-x-3">
                                    <div class="w-8 h-8 rounded-full border-2 border-white bg-slate-200"></div>
                                    <div class="w-8 h-8 rounded-full border-2 border-white bg-slate-300"></div>
                                    <div class="w-8 h-8 rounded-full border-2 border-white bg-slate-400"></div>
                                </div>
                                <span class="text-xs font-bold opacity-60">Joined by 12k+ Planners</span>
                            </div>
                        </div>
                    ) : (
                        <div class="flex flex-wrap gap-4">
                            <div class="flex flex-col p-4 bg-white border border-black/5 rounded-2xl shadow-sm min-w-[140px]">
                                <span class="text-[10px] font-bold opacity-40 uppercase mb-1">Total Protocols</span>
                                <span class="text-2xl font-black">1,400+</span>
                            </div>
                            <div class="flex flex-col p-4 bg-white border border-black/5 rounded-2xl shadow-sm min-w-[140px]">
                                <span class="text-[10px] font-bold opacity-40 uppercase mb-1">Avg. Protein</span>
                                <span class="text-2xl font-black text-orange-600">38g</span>
                            </div>
                            <div class="flex flex-col p-4 bg-white border border-black/5 rounded-2xl shadow-sm min-w-[140px]">
                                <span class="text-[10px] font-bold opacity-40 uppercase mb-1">Human Audited</span>
                                <span class="text-2xl font-black">100%</span>
                            </div>
                        </div>
                    )}
                </div>
                <div class="lg:col-span-5 relative">
                    {isMealPrep ? (
                        <div class="aspect-square bg-white rounded-[40px] shadow-2xl border border-black/5 p-8 relative overflow-hidden group">
                            <div class="absolute inset-0 bg-emerald-50/50 opacity-0 group-hover:opacity-100 transition-opacity"></div>
                            <div class="relative z-10 h-full flex flex-col justify-between">
                                <div class="space-y-4">
                                    <div class="h-2 w-24 bg-emerald-200 rounded-full"></div>
                                    <div class="h-2 w-48 bg-slate-100 rounded-full"></div>
                                    <div class="grid grid-cols-2 gap-4 pt-8">
                                        <div class="h-32 bg-slate-50 rounded-2xl border-2 border-dashed border-slate-200 flex items-center justify-center text-[10px] font-black opacity-20 uppercase tracking-widest">Container Slot A</div>
                                        <div class="h-32 bg-slate-50 rounded-2xl border-2 border-dashed border-slate-200 flex items-center justify-center text-[10px] font-black opacity-20 uppercase tracking-widest">Container Slot B</div>
                                    </div>
                                </div>
                                <div class="bg-emerald-700 text-white p-6 rounded-3xl">
                                    <span class="block text-[10px] font-black opacity-60 mb-1 uppercase">Recommended Flow</span>
                                    <p class="font-bold text-lg">Sunday: 90-Min Batching</p>
                                    <div class="flex justify-between items-center mt-4 text-[10px] font-bold border-t border-white/10 pt-4">
                                        <span>5 LUNCHES</span>
                                        <span>3 DINNERS</span>
                                        <span class="bg-emerald-500 px-2 py-0.5 rounded">SAVE 8HRS</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    ) : (
                        <div class="aspect-square bg-orange-100 rounded-[4rem] rotate-3 relative overflow-hidden">
                            <img src="https://images.unsplash.com/photo-1546069901-ba9599a7e63c?auto=format&fit=crop&w=800&q=80" alt="High Protein Meal" class="w-full h-full object-cover -rotate-3 scale-110 hover:scale-100 transition-transform duration-700" />
                            <div class="absolute inset-0 bg-gradient-to-t from-orange-900/40 to-transparent"></div>
                            <div class="absolute bottom-8 left-8 right-8">
                                <div class="bg-white/90 backdrop-blur p-4 rounded-2xl">
                                    <div class="flex justify-between items-center mb-2">
                                        <span class="font-black text-sm uppercase">Macro Profile</span>
                                        <span class="bg-orange-600 text-white text-[10px] px-2 py-1 rounded">EXCELLENT P:E</span>
                                    </div>
                                    <div class="grid grid-cols-3 gap-2">
                                        <div class="text-center bg-black/5 p-2 rounded-lg">
                                            <div class="text-xs font-bold">42g</div>
                                            <div class="text-[8px] uppercase opacity-50">Prot</div>
                                        </div>
                                        <div class="text-center bg-black/5 p-2 rounded-lg">
                                            <div class="text-xs font-bold">12g</div>
                                            <div class="text-[8px] uppercase opacity-50">Fat</div>
                                        </div>
                                        <div class="text-center bg-black/5 p-2 rounded-lg">
                                            <div class="text-xs font-bold">480</div>
                                            <div class="text-[8px] uppercase opacity-50">Cals</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    )}
                </div>
            </div>
        </section>

        <!-- Facet Mega-Nav -->
        <section id="facets" class="max-w-7xl mx-auto px-6 py-12">
            <div class="bg-white rounded-[32px] border border-black/5 p-8 md:p-12 shadow-sm">
                <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-10 gap-6">
                    <div>
                        <h3 class="text-3xl font-black tracking-tight mb-2">Explore the Taxonomy</h3>
                        <p class="opacity-50 text-sm font-medium">Filter our 500+ logic-first guides by your specific constraints.</p>
                    </div>
                    {isMealPrep ? (
                        <div class="flex bg-slate-100 p-1.5 rounded-2xl gap-2">
                            <button @click="activeTab = 'method'" x-bind:class="activeTab === 'method' ? 'bg-white shadow-md' : 'opacity-40'" class="px-6 py-2 rounded-xl text-xs font-black uppercase tracking-widest transition-all">Method</button>
                            <button @click="activeTab = 'persona'" x-bind:class="activeTab === 'persona' ? 'bg-white shadow-md' : 'opacity-40'" class="px-6 py-2 rounded-xl text-xs font-black uppercase tracking-widest transition-all">Persona</button>
                            <button @click="activeTab = 'ingredient'" x-bind:class="activeTab === 'ingredient' ? 'bg-white shadow-md' : 'opacity-40'" class="px-6 py-2 rounded-xl text-xs font-black uppercase tracking-widest transition-all">Ingredient</button>
                        </div>
                    ) : (
                        <div class="flex bg-slate-100 p-1.5 rounded-2xl gap-2">
                            <button @click="activeFacet = 'diet'" x-bind:class="activeFacet === 'diet' ? 'bg-white shadow-md' : 'opacity-40'" class="px-6 py-2 rounded-xl text-xs font-black uppercase tracking-widest transition-all">Diet</button>
                            <button @click="activeFacet = 'goal'" x-bind:class="activeFacet === 'goal' ? 'bg-white shadow-md' : 'opacity-40'" class="px-6 py-2 rounded-xl text-xs font-black uppercase tracking-widest transition-all">Goal</button>
                            <button @click="activeFacet = 'store'" x-bind:class="activeFacet === 'store' ? 'bg-white shadow-md' : 'opacity-40'" class="px-6 py-2 rounded-xl text-xs font-black uppercase tracking-widest transition-all">Store</button>
                            <button @click="activeFacet = 'chain'" x-bind:class="activeFacet === 'chain' ? 'bg-white shadow-md' : 'opacity-40'" class="px-6 py-2 rounded-xl text-xs font-black uppercase tracking-widest transition-all">Chain</button>
                        </div>
                    )}
                </div>

                {isMealPrep ? (
                    <>
                        <div x-show="activeTab === 'method'" x-transition class="grid" style="grid-template-columns: repeat(auto-fill, minmax(140px, 1fr)); gap: 0.75rem;">
                            {facets.method.values.map((m) => (
                                <a href={`/meal-prep/method/${m}/`} class="mega-chip bg-slate-50 p-4 rounded-2xl text-center border border-black/10 hover:bg-slate-900 hover:text-white transition-all">
                                    <span class="block text-xs font-black capitalize">{m.replace(/-/g, ' ')}</span>
                                </a>
                            ))}
                        </div>
                        <div x-show="activeTab === 'persona'" x-cloak x-transition class="grid" style="grid-template-columns: repeat(auto-fill, minmax(140px, 1fr)); gap: 0.75rem;">
                            {facets.persona.values.map((p) => (
                                <a href={`/meal-prep/persona/${p}/`} class="mega-chip bg-slate-50 p-4 rounded-2xl text-center border border-black/10 hover:bg-slate-900 hover:text-white transition-all">
                                    <span class="block text-xs font-black capitalize">{p.replace(/-/g, ' ')}</span>
                                </a>
                            ))}
                        </div>
                        <div x-show="activeTab === 'ingredient'" x-cloak x-transition class="grid" style="grid-template-columns: repeat(auto-fill, minmax(140px, 1fr)); gap: 0.75rem;">
                            {facets.ingredient.values.map((i) => (
                                <a href={`/meal-prep/ingredient/${i}/`} class="mega-chip bg-slate-50 p-4 rounded-2xl text-center border border-black/10 hover:bg-slate-900 hover:text-white transition-all">
                                    <span class="block text-xs font-black capitalize">{i.replace(/-/g, ' ')}</span>
                                </a>
                            ))}
                        </div>
                    </>
                ) : (
                    <>
                        {(['diet', 'goal', 'store', 'chain'] as const).map((facetKey) => (
                            <div x-show={`activeFacet === '${facetKey}'`} x-cloak={facetKey !== 'diet'} x-transition class="grid" style="grid-template-columns: repeat(auto-fill, minmax(140px, 1fr)); gap: 0.75rem;">
                                {facets[facetKey].values.map((v) => (
                                    <a href={`/high-protein/${facetKey}/${v}/`} class="facet-chip bg-slate-50 p-4 rounded-2xl text-center border border-black/10 hover:bg-slate-900 hover:text-white transition-all">
                                        <span class="block text-xs font-black capitalize">{String(v).replace(/-/g, ' ')}</span>
                                    </a>
                                ))}
                            </div>
                        ))}
                    </>
                )}
            </div>
        </section>

        <!-- Internal Link Grid (SEO Machine) -->
        <section class="bg-slate-900 text-white py-24 px-6 mt-12">
            <div class="max-w-7xl mx-auto">
                <div class="mb-16">
                    <h3 class="text-4xl font-black mb-4">Complete Directory</h3>
                    <p class="text-slate-400 max-w-2xl">A systematic map of our canonical prep logic. Explore every facet of the {isMealPrep ? 'meal prep' : 'high protein'} universe.</p>
                </div>
                <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-12">
                    {Object.entries(facets).slice(0, 5).map(([key, facet]) => (
                        <div>
                            <h6 class={`text-[10px] font-black uppercase tracking-[0.2em] text-${accentColor}-500 mb-6`}>By {facet.label}</h6>
                            <ul class="space-y-3 text-sm opacity-60">
                                {facet.values.slice(0, 7).map((v) => (
                                    <li><a href={`${hubPath}/${key}/${v}/`} class="sidebar-link capitalize">{String(v).replace(/-/g, ' ')}</a></li>
                                ))}
                            </ul>
                        </div>
                    ))}
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class={isMealPrep ? 'bg-white border-t border-black/5 py-16 px-6' : 'bg-slate-900 text-white py-16 px-6'}>
        <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center gap-8">
            <div class="flex items-center gap-3">
                <div class={`w-8 h-8 ${isMealPrep ? 'bg-slate-900 text-white' : 'bg-white text-slate-900'} flex items-center justify-center rounded-lg font-black text-sm`}>
                    {isMealPrep ? 'M' : 'P'}
                </div>
                <span class="font-black text-lg tracking-tighter uppercase">{siteName}</span>
            </div>
            <div class={`flex gap-8 text-[10px] font-black uppercase tracking-widest ${isMealPrep ? 'opacity-40' : 'text-slate-500'}`}>
                <a href="#" class="hover:opacity-100 transition-opacity">Taxonomy Map</a>
                <a href="#" class="hover:opacity-100 transition-opacity">Privacy Policy</a>
                <a href="#" class="hover:opacity-100 transition-opacity">Contact</a>
            </div>
            <p class={`text-[10px] font-bold ${isMealPrep ? 'opacity-30' : 'text-slate-500'} uppercase tracking-[0.2em]`}>© 2024 SYSTEMIC MEALS NETWORK</p>
        </div>
    </footer>

    <!-- BreadcrumbList Schema -->
    <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [{
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": isMealPrep ? "https://mealprepideas.co" : "https://proteinmeals.co"
        }, {
            "@type": "ListItem",
            "position": 2,
            "name": isMealPrep ? "Meal Prep Logistics" : "High Protein Systems",
            "item": (isMealPrep ? "https://mealprepideas.co" : "https://proteinmeals.co") + hubPath + "/"
        }]
    })} />
</BaseLayout>
