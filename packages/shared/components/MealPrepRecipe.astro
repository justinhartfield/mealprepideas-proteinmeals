    font-size: 0.6rem;
    font-weight: 800;
    letter-spacing: 0.1em;
    color: var(--text-secondary);
    margin-bottom: 0.25rem;
    text-transform: uppercase;
  }

  .rp-stat__value {
    display: block;
    font-size: 1.5rem;
    font-weight: 900;
    letter-spacing: -0.02em;
  }

