---
/**
 * FooterNav — System Directory Footer
 * Shared across all pages in The Grocery Index
 */
interface Props {
  brandName?: string;
  brandDescription?: string;
  columns?: {
    title: string;
    links: { href: string; label: string; active?: boolean }[];
  }[];
  copyrightSuffix?: string;
}

const {
  brandName = 'INDEX.01',
  brandDescription = 'The universal taxonomy for high-performance nutrition and logistical meal planning.',
  columns = [
    {
      title: 'Taxonomy',
      links: [
        { href: '/meal-prep/', label: 'Meal-Prep Hub' },
        { href: '/high-protein/', label: 'High-Protein Hub' },
        { href: '#', label: 'Store Index' },
        { href: '#', label: 'Chain Index' },
      ],
    },
    {
      title: 'Conditions',
      links: [
        { href: '#', label: 'PCOS Protocol' },
        { href: '#', label: 'Bariatric Rules' },
        { href: '#', label: 'Postpartum Prep' },
        { href: '#', label: 'Cholesterol Low' },
      ],
    },
    {
      title: 'Methodologies',
      links: [
        { href: '#', label: 'Slow-Cooker' },
        { href: '#', label: 'Air-Fryer' },
        { href: '#', label: 'Microwave-Only' },
        { href: '#', label: 'One-Pan' },
      ],
    },
  ],
  copyrightSuffix = 'Index Authority Network.',
} = Astro.props;
---

<footer class="bg-black border-t border-zinc-900 py-20 px-6">
  <div class="max-w-7xl mx-auto grid grid-cols-2 md:grid-cols-5 gap-12">
    <div class="col-span-2">
      <div class="flex items-center gap-2 mb-6 group cursor-pointer">
        <div class="w-3 h-3 bg-[#D9FF00] rounded-full group-hover:scale-150 transition-transform"></div>
        <span class="text-xl font-black tracking-tighter italic">{brandName}</span>
      </div>
      <p class="text-zinc-500 text-sm max-w-xs mb-8 leading-relaxed font-medium">{brandDescription}</p>
      <div class="flex space-x-4">
        <div class="w-10 h-10 border border-zinc-800 rounded flex items-center justify-center text-zinc-500 hover:text-white hover:bg-[#D9FF00] hover:text-black transition-all cursor-pointer font-black text-xs">IG</div>
        <div class="w-10 h-10 border border-zinc-800 rounded flex items-center justify-center text-zinc-500 hover:text-white hover:bg-[#D9FF00] hover:text-black transition-all cursor-pointer font-black text-xs">TW</div>
        <div class="w-10 h-10 border border-zinc-800 rounded flex items-center justify-center text-zinc-500 hover:text-white hover:bg-[#D9FF00] hover:text-black transition-all cursor-pointer font-black text-xs">YT</div>
      </div>
    </div>

    {columns.map((col) => (
      <div>
        <h6 class="text-[10px] font-black uppercase tracking-widest text-zinc-500 mb-6">{col.title}</h6>
        <ul class="space-y-4 text-xs font-bold text-zinc-400">
          {col.links.map((link) => (
            <li>
              <a href={link.href} class:list={['hover:text-[#D9FF00] transition-colors', link.active && 'text-[#D9FF00]']}>
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    ))}
  </div>

  <div class="max-w-7xl mx-auto mt-20 pt-8 border-t border-zinc-900 flex flex-col md:flex-row justify-between items-center gap-4">
    <span class="text-[10px] font-bold text-zinc-700 uppercase tracking-widest">© 2024 {copyrightSuffix}</span>
    <div class="flex gap-8">
      <a href="#" class="text-[10px] font-bold text-zinc-700 uppercase tracking-widest hover:text-white">Privacy</a>
      <a href="#" class="text-[10px] font-bold text-zinc-700 uppercase tracking-widest hover:text-white">Terms</a>
      <a href="#" class="text-[10px] font-bold text-zinc-700 uppercase tracking-widest hover:text-white">API Access</a>
    </div>
  </div>
</footer>
