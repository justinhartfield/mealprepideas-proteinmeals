---
/**
 * TwoFacetCombo — General Two-Facet Combo Page (T3)
 * Handles diet+goal, method+constraint, diet+constraint, meal+constraint, etc.
 * NOT persona+method (that's PersonaMethodCombo.astro).
 * 
 * Design: Matrix-style dark/light theme with sidebar filters,
 * recipe grid, logistics section, and cross-reference block.
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import HeaderNav from './HeaderNav.astro';
import FooterNav from './FooterNav.astro';
import PlanCTA from './PlanCTA.astro';
import BreadcrumbNav from './BreadcrumbNav.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

interface Recipe {
  id: number;
  title: string;
  slug?: string;
  protein: string;
  cal: string;
  tags: string[];
  img?: string;
}

interface LogisticsCard {
  heading: string;
  items: { title: string; description: string }[];
}

interface SiblingPage {
  swapLabel: string;
  title: string;
  href: string;
}

interface Props {
  title: string;
  description?: string;
  canonicalUrl?: string;
  hub: string;
  facetTypeA: string;
  facetValueA: string;
  facetTypeB: string;
  facetValueB: string;
  displayA: string;
  displayB: string;
  heroDescription: string;
  matrixId?: string;
  targetStat?: { label: string; value: string; unit?: string };
  recipes: Recipe[];
  logisticsTitle: string;
  logisticsDescription: string;
  logisticsPrepTime?: string;
  logisticsCards: LogisticsCard[];
  siblingPages: SiblingPage[];
  site?: 'mealprepideas' | 'proteinmeals';
  /* Legacy compat props — ignored if new props are provided */
  facetA?: { type: string; value: string };
  facetB?: { type: string; value: string };
  headline?: string;
  headlineAccent?: string;
  subheadline?: string;
  faqs?: { question: string; answer: string }[];
  siblings?: { href: string; label: string; sublabel?: string }[];
}

const {
  title,
  description,
  canonicalUrl,
  hub,
  facetTypeA,
  facetValueA,
  facetTypeB,
  facetValueB,
  displayA,
  displayB,
  heroDescription,
  matrixId = 'T3-000',
  targetStat,
  recipes = [],
  logisticsTitle,
  logisticsDescription,
  logisticsPrepTime = '90m',
  logisticsCards = [],
  siblingPages = [],
  site,
} = Astro.props;

const hubPath = hub === 'meal-prep' ? '/meal-prep/' : '/high-protein/';
const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: hub === 'meal-prep' ? 'Meal Prep' : 'High Protein', href: hubPath },
  { label: `${displayA} ${displayB}` },
];

// ─── Build dynamic filters from recipe tags ─────────────────────────
const tagCounts: Record<string, number> = {};
for (const recipe of recipes) {
  for (const tag of recipe.tags) {
    tagCounts[tag] = (tagCounts[tag] || 0) + 1;
  }
}
const tagFilters = Object.entries(tagCounts)
  .sort((a, b) => b[1] - a[1])
  .map(([tag, count]) => ({ tag, count, label: tag.replace(/-/g, ' ').replace(/\b\w/g, c => c.toUpperCase()) }));

// Serialize recipes for Alpine
const recipesJson = JSON.stringify(recipes.map(r => ({
  ...r,
  img: r.img || `https://images.unsplash.com/photo-1546069901-ba9599a7e63c?auto=format&fit=crop&q=80&w=400`,
})));

// Split logistics title for line break rendering
const logisticsTitleLines = logisticsTitle.split('\n');

// i18n
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout title={title} description={description} canonicalUrl={canonicalUrl}>
  <HeaderNav />

  <main class="flex-grow" x-data={`{
    activeFilter: 'all',
    items: ${recipesJson}
  }`}>
    <!-- T3 HERO: COMBO HEADER -->
    <section class="relative py-20 md:py-24 px-6 border-b overflow-hidden" style="border-color: var(--border-default);">
      <div class="max-w-7xl mx-auto relative z-10">
        <BreadcrumbNav items={breadcrumbs} />
        <div class="flex flex-col md:flex-row md:items-end justify-between gap-8 mt-8">
          <div>
            <div class="flex items-center gap-3 mb-6">
              <span class="px-2 py-0.5 text-[10px] font-black uppercase rounded" style="background-color: var(--text-primary); color: var(--bg-primary);">
                Matrix ID: {matrixId}
              </span>
              <span class="px-2 py-0.5 text-[10px] font-black uppercase rounded border" style="color: var(--text-tertiary); border-color: var(--border-default);">
                Updated 24h ago
              </span>
            </div>
            <h1 class="text-5xl md:text-7xl lg:text-8xl font-black tracking-tighter leading-[0.85] mb-6">
              {displayA.toUpperCase()}<br>
              <span style="color: var(--accent-primary);">{displayB.toUpperCase()}</span>
            </h1>
            <p class="max-w-2xl text-base md:text-lg font-medium leading-relaxed" style="color: var(--text-secondary);">
              {heroDescription}
            </p>
          </div>
          {targetStat && (
            <div class="flex flex-col gap-4 shrink-0">
              <div class="p-6 border rounded-2xl flex flex-col" style="background-color: var(--bg-secondary); border-color: var(--border-default);">
                <span class="text-[10px] font-black uppercase tracking-widest mb-1" style="color: var(--text-tertiary);">{targetStat.label}</span>
                <span class="text-4xl font-black tabular-nums">
                  {targetStat.value}
                  {targetStat.unit && <span class="text-sm" style="color: var(--text-tertiary);"> {targetStat.unit}</span>}
                </span>
              </div>
            </div>
          )}
        </div>
      </div>
      <!-- Decorative Scanner Background -->
      <div class="absolute top-0 right-0 w-1/3 h-full opacity-10 pointer-events-none" aria-hidden="true">
        <svg viewBox="0 0 100 100" class="w-full h-full" style="color: var(--text-primary);">
          <path d="M0 0h100v100H0z" fill="currentColor" fill-opacity=".1"/>
          <path d="M10 10h80v80H10z" fill="none" stroke="currentColor" stroke-width=".5"/>
          <path d="M20 20h60v60H20z" fill="none" stroke="currentColor" stroke-width=".3"/>
        </svg>
      </div>
    </section>

    <!-- T3 MODULE: TOP 10 + SIDEBAR FILTERS -->
    <section class="py-12 md:py-16 px-6 max-w-7xl mx-auto">
      <div class="flex flex-col lg:flex-row gap-8 lg:gap-12">
        
        <!-- Sidebar: Client-Side Filters -->
        <aside class="w-full lg:w-64 space-y-8 shrink-0">
          <div>
            <h3 class="text-[10px] font-black uppercase tracking-widest mb-4" style="color: var(--text-tertiary);">{t('combo.refineSearch')}</h3>
            <div class="flex flex-col gap-2">
              <button
                @click="activeFilter = 'all'"
                :class="activeFilter === 'all' ? 'pill-active' : ''"
                class="flex items-center justify-between px-4 py-3 rounded-xl border font-bold text-xs transition-all"
                :style="activeFilter === 'all' ? '' : `color: var(--text-secondary); border-color: var(--border-default);`"
              >
                All Strategies <span>{recipes.length}</span>
              </button>
              {tagFilters.map(({ tag, count, label }) => (
                <button
                  x-on:click={`activeFilter = '${tag}'`}
                  x-bind:class={`activeFilter === '${tag}' ? 'pill-active' : ''`}
                  class="flex items-center justify-between px-4 py-3 rounded-xl border font-bold text-xs transition-all"
                  x-bind:style={`activeFilter === '${tag}' ? '' : 'color: var(--text-secondary); border-color: var(--border-default);'`}
                >
                  {label} <span>{count}</span>
                </button>
              ))}
            </div>
          </div>

          <div class="p-6 border border-dashed rounded-2xl" style="background-color: var(--bg-tertiary); border-color: var(--border-default);">
            <span class="text-[10px] font-black uppercase tracking-widest block mb-2" style="color: var(--accent-primary);">{t('combo.smartSourcing')}</span>
            <p class="text-[11px] font-medium leading-relaxed" style="color: var(--text-tertiary);">
              Combinations here are engineered to satisfy both {displayA.toLowerCase()} and {displayB.toLowerCase()} constraints simultaneously for maximum protocol efficiency.
            </p>
          </div>
        </aside>

        <!-- Main Content: The Top 10 Protocols -->
        <div class="flex-grow">
          <div class="flex items-center justify-between mb-8">
            <h2 class="text-xl font-black uppercase tracking-tight">The Top {recipes.length} Protocols</h2>
            <div class="text-[10px] font-bold" style="color: var(--text-tertiary);">{t('combo.sortedByDensity')}</div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <template x-for="item in items" :key="item.id">
              <div
                x-show="activeFilter === 'all' || item.tags.includes(activeFilter)"
                x-transition:enter="transition ease-out duration-300"
                x-transition:enter-start="opacity-0 transform translate-y-4"
                x-transition:enter-end="opacity-100 transform translate-y-0"
                class="hyper-border rounded-2xl p-4 flex gap-4 group cursor-pointer"
              >
                <div class="w-24 h-24 rounded-xl overflow-hidden shrink-0 border relative" style="border-color: var(--border-default);">
                  <img
                    :src="item.img"
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    alt=""
                    loading="lazy"
                  />
                  <div class="scanner-line opacity-0 group-hover:opacity-100"></div>
                </div>
                <div class="flex flex-col justify-between py-1 flex-grow min-w-0">
                  <div>
                    <div class="flex justify-between items-start gap-2">
                      <h4 class="font-black text-sm uppercase tracking-tight group-hover-accent-text transition-colors truncate" x-text="item.title"></h4>
                      <span class="text-[9px] font-black shrink-0" style="color: var(--text-tertiary);" x-text="'SKU-' + item.id"></span>
                    </div>
                    <div class="flex gap-4 mt-2">
                      <div class="flex flex-col">
                        <span class="text-[9px] font-bold uppercase" style="color: var(--text-tertiary);">{t('common.protein')}</span>
                        <span class="text-xs font-black" x-text="item.protein"></span>
                      </div>
                      <div class="flex flex-col">
                        <span class="text-[9px] font-bold uppercase" style="color: var(--text-tertiary);">{t('common.calories')}</span>
                        <span class="text-xs font-black" style="color: var(--text-secondary);" x-text="item.cal"></span>
                      </div>
                    </div>
                  </div>
                  <div class="flex flex-wrap gap-1 mt-2">
                    <template x-for="tag in item.tags">
                      <span
                        class="text-[8px] font-black uppercase tracking-widest px-1.5 py-0.5 rounded"
                        style="background-color: var(--bg-tertiary); color: var(--text-secondary);"
                        x-text="tag.replace(/-/g, ' ')"
                      ></span>
                    </template>
                  </div>
                </div>
              </div>
            </template>
          </div>
        </div>
      </div>
    </section>

    <!-- T3 MODULE: MEAL PREP LOGISTICS -->
    <section class="border-y py-20 md:py-24" style="background-color: var(--bg-secondary); border-color: var(--border-default);">
      <div class="px-6 max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-12">
        <div class="col-span-1">
          <h3 class="text-3xl font-black tracking-tighter mb-6 uppercase">
            {logisticsTitleLines.map((line, i) => (
              <Fragment>
                {i > 0 && <br />}
                {line}
              </Fragment>
            ))}
          </h3>
          <p class="text-sm font-medium leading-relaxed mb-6" style="color: var(--text-tertiary);">
            {logisticsDescription}
          </p>
          <div class="p-4 rounded-xl border flex items-center gap-4" style="background-color: var(--bg-tertiary); border-color: var(--border-default);">
            <div class="w-12 h-12 flex items-center justify-center font-black rounded-lg" style="background-color: var(--accent-primary); color: var(--text-inverse);">
              {logisticsPrepTime}
            </div>
            <div class="text-[10px] font-bold uppercase leading-tight" style="color: var(--text-secondary);">
              Total Sunday<br/>Prep Time
            </div>
          </div>
        </div>
        <div class="md:col-span-2 grid grid-cols-1 sm:grid-cols-2 gap-8">
          {logisticsCards.map(card => (
            <div class="space-y-4">
              <h4 class="text-[10px] font-black uppercase tracking-[0.3em]" style="color: var(--accent-primary);">{card.heading}</h4>
              <div class="space-y-3">
                {card.items.map(item => (
                  <div class="p-4 rounded-xl border" style="background-color: var(--bg-tertiary); border-color: var(--border-default);">
                    <span class="text-xs font-black block mb-1">{item.title}</span>
                    <p class="text-[11px] leading-relaxed" style="color: var(--text-tertiary);">{item.description}</p>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- T3 MODULE: CROSS-REFERENCE BLOCK -->
    {siblingPages.length > 0 && (
      <section class="py-20 md:py-24 px-6 max-w-7xl mx-auto">
        <h4 class="text-xs font-black tracking-[0.4em] uppercase mb-12 text-center" style="color: var(--text-tertiary);">{t('combo.crossRefMatrix')}</h4>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          {siblingPages.map(sib => (
            <a href={sib.href} class="hyper-border p-6 rounded-2xl flex flex-col items-center text-center group">
              <span class="text-[10px] font-black mb-2 uppercase" style="color: var(--text-tertiary);">{sib.swapLabel}</span>
              <span class="text-sm font-black group-hover-accent-text transition-colors">{sib.title}</span>
            </a>
          ))}
        </div>
      </section>
    )}

    <!-- PLAN CTA -->
    <PlanCTA hub={hub} />
  </main>

  <FooterNav copyrightSuffix="Index Authority Network. T3 Combo Page." />
</BaseLayout>
