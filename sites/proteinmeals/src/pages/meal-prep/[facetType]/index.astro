---
/**
 * proteinmeals.co/meal-prep/[facetType]/ â€” Facet Type Index Page
 * Lists all values for a given facet type (cross-hub on proteinmeals)
 */
import FacetTypeIndex from '@mealprepideas/shared/components/FacetTypeIndex.astro';
import { facets, FACET_ORDER, type FacetKey } from '@mealprepideas/shared/data/taxonomy';
import { slugToDisplay } from '@mealprepideas/shared/utils/urls';

export function getStaticPaths() {
  return FACET_ORDER.map(facetType => ({
    params: { facetType },
    props: { facetType: facetType as FacetKey },
  }));
}

interface Props {
  facetType: FacetKey;
}

const { facetType } = Astro.props;
const facetLabel = facets[facetType]?.label || slugToDisplay(facetType);
---

<FacetTypeIndex
  title={`${facetLabel} Meal Prep Categories | ProteinMeals.co`}
  description={`Browse all ${facetLabel.toLowerCase()} categories for meal prep. Find recipes, guides, and plans organized by ${facetLabel.toLowerCase()}.`}
  canonicalUrl={`https://proteinmeals.co/meal-prep/${facetType}/`}
  hub="meal-prep"
  facetType={facetType}
  site="proteinmeals"
/>
