---
/**
 * mealprepideas.co/meal-prep/[...slug] â€” Two-Facet Combo Catch-all (T3)
 * Handles routes like /meal-prep/persona/postpartum/method/freezer/
 */
import TwoFacetCombo from '@mealprepideas/shared/components/TwoFacetCombo.astro';
import { generateTwoFacetPaths, slugToDisplay } from '@mealprepideas/shared/utils/urls';
import type { FacetKey } from '@mealprepideas/shared/data/taxonomy';

export function getStaticPaths() {
  const paths = generateTwoFacetPaths('meal-prep');
  return paths.map(({ slug, facetA, facetB }) => ({
    params: { slug: slug.join('/') },
    props: { facetA, facetB },
  }));
}

interface Props {
  facetA: { type: FacetKey; value: string };
  facetB: { type: FacetKey; value: string };
}

const { facetA, facetB } = Astro.props;
const displayA = slugToDisplay(facetA.value);
const displayB = slugToDisplay(facetB.value);

// Placeholder recipes for T3 pages
const placeholderRecipes = Array.from({ length: 6 }, (_, i) => ({
  id: i + 1,
  title: `${displayA} ${displayB} Recipe ${i + 1}`,
  protein: `${28 + i * 3}g`,
  cal: `${420 + i * 40}`,
  method: facetA.type === 'method' ? facetA.value : facetB.type === 'method' ? facetB.value : 'batch-cook',
  tag: ['High Fiber', 'Budget', 'Quick', 'Freezer-Friendly', 'Comfort', 'Classic'][i] || 'Standard',
}));

const placeholderFaqs = [
  {
    question: `How do I combine ${displayA} with ${displayB} effectively?`,
    answer: `Our system optimizes the intersection of ${displayA.toLowerCase()} and ${displayB.toLowerCase()} to ensure maximum nutritional benefit and prep efficiency.`,
  },
  {
    question: `How long do these combination meals store?`,
    answer: `Most protocols in this combination are optimized for 5-day fridge life. Freezer-friendly variants extend to 90 days.`,
  },
];
---

<TwoFacetCombo
  hub="meal-prep"
  facetA={facetA}
  facetB={facetB}
  title={`${displayA} ${displayB} Protocols | MealPrepIdeas.co`}
  description={`${displayA} meets ${displayB}. Systematic meal prep protocols at the intersection of these two facets.`}
  canonicalUrl={`https://mealprepideas.co/meal-prep/${facetA.type}/${facetA.value}/${facetB.type}/${facetB.value}/`}
  headline={displayA}
  headlineAccent={`${displayB} System`}
  subheadline={`Solving the intersection of ${displayA.toLowerCase()} and ${displayB.toLowerCase()} with data-backed prep protocols.`}
  recipes={placeholderRecipes}
  faqs={placeholderFaqs}
  siblings={[
    { href: `/meal-prep/${facetA.type}/${facetA.value}/`, label: `${displayA} Hub`, sublabel: `View all ${displayA} protocols` },
    { href: `/meal-prep/${facetB.type}/${facetB.value}/`, label: `${displayB} Hub`, sublabel: `View all ${displayB} protocols` },
  ]}
/>
